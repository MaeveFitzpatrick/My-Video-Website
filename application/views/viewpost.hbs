
    
    <main class="viewpost-container">
            <header class="viewpost-header">
            <h1>
                <img src='../public/images/tvscreen.png' alt="tv screen" width="35px" height="25px"> View Your Post
            </h1>
        </header>

            <div class="display">
            <h2>{{post.title}}</h2>
            <p>{{post.username}}</p>
            <p>{{formatDateString post.createdAt}}</p>
            <p>{{post.description}}</p>
            <video width="500" height="300" controls>
                <source src="/{{post.video}}" type="video/mp4" >
            </video>
            <h4>Comments:</h4>
        </div>
        <div class="comment-section">
            <div class="comment-box">
                <textarea id="commentText" class="commentText" type="text" data-postid="{{post.id}}"></textarea>
                <button id="comment-button" class="comment-button" aria-hidden="true" data-postid="{{post.id}}">
                    Comment
                </button>
            </div>
            <div id="commentsList" class="comments">
               {{#each post.comments}}
                    {{> comment this}}
               {{/each}}
            </div>
        </div>
        
        
        
    </main>
