            <form id="login-form" class="input-form">
                <div class="input">
                    <label class="username tag" for="username:">Username:</label>
                    <input
                        class="username input"
                        id=”username”
                        type=”text”
                        placeholder="Enter your username"
                        required
                    />
                </div>
                <div class="input">
                    <label class="password tag" for=”password”>Password:</label>
                    <input
                        class="password input"
                        id="password" 
                        type="password"
                        placeholder="Enter your password"
                        required
                    />
                </div>
